<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.info.AddressEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/ic_common_back_black" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增配送地址"
            android:textColor="#333333"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f3f3f3"></View>
    <!--联系人-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="联系人"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:background="@null"
                android:gravity="right"
                android:hint="姓名" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f3f3f3"></View>

    <!--性别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="#ffffff"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/group_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bt1_sex"
                android:layout_width="82dip"
                android:layout_height="32dip"
                android:background="@drawable/select_sex_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="男士"
                android:textColor="#363636"
                android:textSize="16sp" />


            <RadioButton
                android:id="@+id/bt2_sex"
                android:layout_width="82dip"
                android:layout_height="32dip"
                android:layout_marginLeft="6dip"
                android:background="@drawable/select_sex_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="女士"
                android:textColor="#363636"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f3f3f3"></View>

    <!--电话-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="电话"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:background="@null"
                android:gravity="right"
                android:hint="联系电话"
                android:inputType="number"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f3f3f3"></View>

    <!--地址-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="地址"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:background="@null"
                android:gravity="right"
                android:hint="请选择送餐地址"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="13dip"
                android:layout_height="13dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/ic_common_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f3f3f3"></View>

    <!--门牌号-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="门牌号"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:background="@null"
                android:gravity="right"
                android:hint="例：5楼203室"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f3f3f3"></View>

    <!--标签-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="标签"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/group_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/bt1_tag"
                    android:layout_width="82dip"
                    android:layout_height="32dip"
                    android:background="@drawable/select_sex_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="家"
                    android:textColor="#363636"
                    android:textSize="16sp" />


                <RadioButton
                    android:id="@+id/bt2_tag"
                    android:layout_width="82dip"
                    android:layout_height="32dip"
                    android:layout_marginLeft="6dip"
                    android:background="@drawable/select_sex_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="公司"
                    android:textColor="#363636"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/bt3_tag"
                    android:layout_width="82dip"
                    android:layout_height="32dip"
                    android:layout_marginLeft="6dip"
                    android:background="@drawable/select_sex_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="学校"
                    android:textColor="#363636"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f3f3f3"></View>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="30dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/shape_logout_bg"
        android:text="确定"
        android:textColor="#333333"
        android:textSize="16sp" />
</LinearLayout>