<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.GoodDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dip"
                    android:src="@mipmap/ic_common_back" />

            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="9.9元香辣鸡腿堡"
                android:textColor="@color/colorYellow"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="220dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f3f3f3">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingTop="15dip"
            android:paddingBottom="15dip">

            <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:lineSpacingExtra="8dip"
                android:text="产品满69元（不含外送费）加9.9元即可享受香辣鸡腿堡，每单 仅限1份。"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"
                android:text="产品及包装以实物为准。"
                android:textColor="#999999"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f3f3f3">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dip"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vip_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="￥9.9"
                android:textColor="@color/colorYellow"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/old_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="2px"
                android:text="原价￥18.00"
                android:textColor="#999999"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reduce"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:src="@mipmap/ic_cmmon_reduce" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:text="9"
                    android:textColor="#0a0a0a"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_marginRight="15dip"
                    android:src="@mipmap/ic_common_add" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:background="#262626"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buy_car"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/ic_common_buy_car" />

        <TextView
            android:id="@+id/vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="￥62.00"
            android:textColor="@color/colorYellow"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:text="￥68.00"
            android:textColor="#999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="共0件商品"
            android:textColor="@color/colorYellow"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginRight="30dip"
                android:background="#ffffff"></View>

            <TextView
                android:id="@+id/go_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dip"
                android:text="去支付"
                android:textColor="@color/colorYellow"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_marginRight="15dip"
                android:src="@mipmap/ic_common_right_yellow" />
        </LinearLayout>

    </LinearLayout>


    <!--购物车-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/car_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>
</RelativeLayout>