<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dip"
                android:text="北京"
                android:textColor="@color/colorYellow"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="13dip"
                android:layout_height="8dip"
                android:layout_marginLeft="9.5dip"
                android:src="@mipmap/ic_home_spanned" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="34dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="68dip"
            android:background="@drawable/shape_search_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="115dip"
            app:indicator_drawable_selected="@drawable/shape_banner_indicator_selected"
            app:indicator_drawable_unselected="@drawable/shape_banner_indicator_unselected"
            app:indicator_height="8dip"
            app:indicator_margin="4dip"
            app:indicator_width="8dip" />


        <GridView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:numColumns="4" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dip" />
    </LinearLayout>
</LinearLayout>