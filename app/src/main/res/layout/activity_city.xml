<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    tools:context=".ui.info.CityActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:orientation="vertical">

            <ImageView
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center"
                android:layout_marginTop="14dip"
                android:src="@mipmap/ic_common_back" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="位置信息"
            android:textColor="@color/colorYellow"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="14.5dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/shape_search_bg"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/current_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dip"
                android:background="@null"
                android:text="北京"
                android:textColor="#333333"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="8dip"
                android:layout_height="8dip"
                android:layout_marginLeft="5dip"
                android:src="@mipmap/ic_common_down_yellow" />

            <ImageView
                android:layout_width="1dip"
                android:layout_height="15.5dip"
                android:layout_marginLeft="10dip"
                android:src="@mipmap/ic_common_city_line" />

            <ImageView
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_marginLeft="10dip"
                android:src="@mipmap/ic_common_city_search" />

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="小区/写字楼/学校等"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="20dip"
            android:text="当前位置："
            android:textColor="#1e1e1e"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dip"
            android:layout_marginTop="6dip"
            android:layout_marginBottom="15dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_marginLeft="15dip"
                android:src="@mipmap/ic_common_location" />

            <TextView
                android:id="@+id/current_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:ellipsize="end"
                android:maxEms="15"
                android:singleLine="true"
                android:text="定位中"
                android:textColor="#1e1e1e"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/re_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:text="重新定位"
                    android:textColor="@color/colorYellow"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="#f6f6f6"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132.5dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="20dip"
                android:layout_marginRight="15dip"
                android:text="使用说明："
                android:textColor="#5d5a5a"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.5dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="15dip"
                android:text="1.选择所在城市 \n2.搜索小区/写字楼/学校等详细位置信息 \n3.选择您所在的具体位置 \n4.如没有您的位置信息，选择与您相临的位置即可"
                android:textColor="#5d5a5a"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="108dip"
        android:orientation="vertical"
        android:scrollbars="none"
        android:visibility="gone">
        <!--搜索结果列表-->
        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:text="找不到地址？"
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dip"
                android:layout_marginTop="4dip"
                android:layout_marginRight="48dip"
                android:layout_marginBottom="8dip"
                android:gravity="center_horizontal"
                android:text="请尝试只输入小区、写字楼或学校名，详细地址（如门牌号）可稍后输入哦！"
                android:textColor="#999999"
                android:textSize="14sp" />


        </LinearLayout>

    </ScrollView>

    <GridView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>