<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context=".ui.home.OrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dip"
                    android:src="@mipmap/ic_common_back_black"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的订单"
                android:textColor="@color/colorYellow"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f3f3f3"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dip"
            android:background="#ffffff"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/order_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="待支付"
                    android:textColor="@color/colorYellow"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/left_view"
                    android:layout_width="match_parent"
                    android:layout_height="4dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@color/colorYellow"></View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/order_middle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="已支付"
                    android:textColor="#999999"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/middle_view"
                    android:layout_width="match_parent"
                    android:layout_height="4dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@color/colorYellow"
                    android:visibility="gone"></View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/order_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="#999999"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/right_view"
                    android:layout_width="match_parent"
                    android:layout_height="4dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="@color/colorYellow"
                    android:visibility="gone"></View>
            </RelativeLayout>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dip"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <TextView
        android:id="@+id/none_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="暂无记录"
        android:textColor="@color/colorYellow"
        android:textSize="24sp"
        android:visibility="gone" />

</RelativeLayout>