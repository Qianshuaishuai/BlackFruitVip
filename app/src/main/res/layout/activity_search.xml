<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.home.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dip"
                    android:src="@mipmap/ic_common_back" />

            </LinearLayout>

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:layout_marginLeft="38dip"
                android:layout_marginRight="72dip"
                android:background="@drawable/shape_search_bg"
                android:gravity="center"
                android:hint="搜索店铺" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:text="附近商家"
            android:textColor="#333333"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="15dip">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:clickable="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="340dip"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detail_close"
                    android:layout_width="12.5dip"
                    android:layout_height="12.5dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@mipmap/ic_common_close" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detail_img"
                    android:layout_width="75dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="15dip"
                    android:background="#f3f3f3" />

                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="顺义平路分店 KFC"
                    android:textColor="#333333"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:text="顺义区后沙谷镇安平路5号院2号楼"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="16dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="11dip"
                            android:layout_height="11dip"
                            android:src="@mipmap/ic_common_notice" />

                        <TextView
                            android:id="@+id/detail_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="餐厅密集，请注意区分"
                            android:textColor="#666666"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dip"
                        android:paddingLeft="12dip"
                        android:paddingTop="8dip"
                        android:paddingRight="12dip"
                        android:paddingBottom="8dip"
                        android:text="查看地图"
                        android:textColor="@color/colorYellow" />
                </LinearLayout>
            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:id="@+id/detail_group_layout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <!--<Button-->
            <!--android:layout_width="114dip"-->
            <!--android:layout_height="57dip" />-->
            <!--</LinearLayout>-->

            <TextView
                android:id="@+id/service_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="48dip"
                android:text="请选择就餐方式"
                android:textColor="#333333"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/group_service"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:layout_marginLeft="14.5dip"
                android:layout_marginTop="15dip"
                android:layout_marginRight="14.5dip"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_left"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selected_service_left_bg"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="店内就餐"
                    android:textColor="#363636"
                    android:textSize="16sp" />


                <RadioButton
                    android:id="@+id/rb_middle"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selected_service_middle_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="打包带走"
                    android:textColor="#363636"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_right"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selected_service_right_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="外卖到家"
                    android:textColor="#363636"
                    android:textSize="16sp" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/go_in"
                    android:layout_width="match_parent"
                    android:layout_height="42dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="15dip"
                    android:background="@drawable/shape_logout_bg"
                    android:text="进入店铺"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>